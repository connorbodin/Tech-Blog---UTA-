<div class="text-center">
  <h2 class="p-5">{{name}}</h2>

  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
  </p>
  <p>
    <button id="comment" class="btn btn-primary">Comment</button>
  </p>
  {{#if Comments.length}}
    <div class="col-md-12 project-list">
      <h4>Comments:</h4>
      {{#each Comments as |comment|}}
        <div class="alert alert-dark" role="alert">
          <h4 class="alert-heading">{{user.name}}</h4>
          <p>{{comment.content}}</p>
          <hr />
          <p class="mb-0">{{format_date comment.date_created}}</p>
        </div>
      {{/each}}
    </div>
  {{/if}}
  <form id="comment-form" class="display-none">
    <div class="form-group">
      <label for="comment-desc">Comment: </label>
      <textarea class="form-input" id="commentBody" name="comment-desc">
      </textarea>
      <button
        type="submit"
        id="comment-submit"
        class="btn btn-primary"
        data-id="{{{id}}}"
      >Submit</button>

    </div>
  </form>
</div>

<div>
  <p>

  </p>
</div>