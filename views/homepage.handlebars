<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="mb-4 border border-1 border-white bg-secondary">
<div class="row project text-dark bg-secondary m-1">
  <div class="col-md-8">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/post/{{post.id}}" class="text-dark">{{post.name}}</a>
    </h2>
    </div>
  <div class="col-md-4">
    <p class="text-dark">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
  <div class="col-md-8 p-3">
    <p class="text-dark">
      {{post.description}}
    </p>
  </div>
  </div>
{{/each}}


